{
  "name": "ml_env",
  "image": "ghcr.io/digimatchem/paper-ml-with-lobster-descriptors/mlproject-python-3.10:latest",
  "initializeCommand": "docker system prune --all --force",
  "hostRequirements": {
   "cpus": 4,
   "memory": "16gb",
   "storage": "32gb"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker"]
    },
  },
  "postCreateCommand": "micromamba activate ml_env && pip install -e .",
}
